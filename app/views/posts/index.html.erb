<h1>Posts</h1>
<ul>
  <% @posts.each do |post| %>
    <li><%= post.title %></li>
    <li><%= image_tag url_for(post.image), size: "300x400" if post.image.attached? %></li>
    <li><%= post.description %></li>
    <li><%= post.mood %></li>
    <li><%= post.date %></li>
    <li><%= post.age %></li>
  <% end %>
</ul>